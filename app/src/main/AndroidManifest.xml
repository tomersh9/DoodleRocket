<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doodlerocket">

    <application
        android:allowBackup="true"
        android:icon="@drawable/default_ship_100"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">

        <activity android:name=".Activities.HomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".Activities.SplashScreen"/>

        <activity   android:name=".Activities.MainActivity"/>
        <activity android:name=".Activities.GameOverActivity"/>
        <activity android:name=".Activities.ScoreBoardActivity"/>
        <activity android:name=".Activities.ShopActivity"/>
        <activity android:name=".Activities.LevelBlockOne"/>
        <activity android:name=".Activities.LevelBlockTwo"/>
        <activity android:name=".Activities.LevelBlockThree"/>



        <activity android:name=".Activities.LoginPage"/>

    </application>

</manifest>