<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vortex_pink_bg">

    <TextView
        android:id="@+id/victory_record_tv"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/game_over"
        android:textSize="30sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/record_victory_stats_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_victory_score_tv"
            style="@style/shop_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/score" />

        <TextView
            android:id="@+id/record_victory_highscore_tv"
            style="@style/high_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/high_score"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/record_victory_gems_tv"
            style="@style/high_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/gems_earned"
            android:textColor="@color/green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/record_victory_coins_tv"
            style="@style/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/total_coins"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/record_victory_stats_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/record_menu_btn"
            style="@style/btn_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_red_selector"
            android:text="@string/main_menu"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <Button
            android:id="@+id/record_next_btn"
            style="@style/btn_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_green_selector"
            android:text="@string/choose_level"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>