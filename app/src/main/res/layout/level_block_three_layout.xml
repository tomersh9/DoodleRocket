<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvl_3_block"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars_pxl_png">


    <TextView
        style="@style/high_score"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/galaxy_3" />

    <LinearLayout
        android:id="@+id/row_one_layout_b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lvl_5_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ocean_300_locked" />

        <TextView
            android:id="@+id/lvl_5_tv"
            style="@style/reg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="@string/locked" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_two_layout_b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_one_layout_b3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lvl_6_tv"
            style="@style/reg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="@string/locked" />

        <ImageView
            android:id="@+id/lvl_6_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ice_300_locked" />
    </LinearLayout>


        <ImageButton
            android:id="@+id/prev_btn_block_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="140dp"
            android:background="@null"
            android:src="@drawable/arrow_left_50" />

        <ImageButton
            android:id="@+id/next_btn_block_3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="140dp"
            android:background="@null"
            android:src="@drawable/arrow_right_50" />


</RelativeLayout>