<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="game_over">
        <item name="fontFamily">@font/retro</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">15</item>
        <item name="android:shadowDy">15</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="score">
        <item name="fontFamily">@font/retro</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">17sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="shop_item">
        <item name="fontFamily">@font/retro</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="high_score">
        <item name="fontFamily">@font/retro</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/scorecolor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="btn_txt">
        <item name="fontFamily">@font/retro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="play_btn_txt">
        <item name="fontFamily">@font/retro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="title">
        <item name="fontFamily">@font/retro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowColor">@color/purple</item>
        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">12</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="reg_txt">
        <item name="fontFamily">@font/retro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">3</item>
    </style>

</resources>